<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:background="@drawable/background_one"
    tools:context=".WelcomePage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_condensed_extrabold"
            android:text="CarpoolClan"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:layout_marginTop="240dp"
            app:drawableTopCompat="@drawable/barbarian" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_condensed_regular"
            android:text="Clash for Commutes"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp" />
        <Button
            android:id="@+id/login_page_redirect"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:fontFamily="@font/opensans_condensed_semibold"
            android:text="LOGIN"
            android:textSize="32sp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/amber_400"
            app:cornerRadius = "20dp" />
        <Button
            android:id="@+id/registration_page_redirect"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:fontFamily="@font/opensans_condensed_semibold"
            android:text="SIGN UP"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/amber_400"
            app:cornerRadius = "20dp" />
    </LinearLayout>
</ScrollView>